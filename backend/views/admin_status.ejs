<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>System Status</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body { 
      font-family: 'Inter', sans-serif; 
      background-color: #f4f7f9; 
    }
    .animate-pulse {
      animation: fadeIn 1s ease-in-out;
    }
    @keyframes fadeIn {
      0% { background-color: #dbeafe; }
      100% { background-color: transparent; }
    }
  </style>
  <% 
    var baseUrl = typeof baseUrl !== 'undefined' ? baseUrl : '/admin';
    var activePage = typeof activePage !== 'undefined' ? activePage : 'status';
  %>
</head>
<body class="p-8">

  <div class="max-w-4xl mx-auto bg-white shadow-2xl rounded-xl p-8 space-y-8">
    <h1 class="text-4xl font-extrabold text-gray-800 border-b-4 border-yellow-500 pb-4">
      System Status & Diagnostics
    </h1>
    
    <!-- Navigation -->
    <nav class="flex justify-center space-x-2 mb-8 border-b pb-4 text-sm">
      <a href="<%= baseUrl %>" class="px-3 py-1 rounded transition duration-200 <%= activePage === 'control' ? 'bg-indigo-600 text-white font-bold shadow-md' : 'text-gray-600 hover:bg-gray-100' %> font-medium">Control Panel</a>
      <a href="<%= baseUrl %>/config" class="px-3 py-1 rounded transition duration-200 <%= activePage === 'config' ? 'bg-indigo-600 text-white font-bold shadow-md' : 'text-gray-600 hover:bg-gray-100' %> font-medium">Feed Config</a>
      <a href="<%= baseUrl %>/status" class="px-3 py-1 rounded transition duration-200 <%= activePage === 'status' ? 'bg-indigo-600 text-white font-bold shadow-md' : 'text-gray-600 hover:bg-gray-100' %> font-medium">System Status</a>
      <a href="<%= baseUrl %>/commander" class="px-3 py-1 rounded transition duration-200 <%= activePage === 'commander' ? 'bg-indigo-600 text-white font-bold shadow-md' : 'text-gray-600 hover:bg-gray-100' %> font-medium">Commander</a>
    </nav>

    <div class="p-6 bg-yellow-50 rounded-lg border border-yellow-300 shadow-md">
      <h2 class="text-2xl font-semibold mb-4 text-yellow-700">Service Health</h2>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
        <div class="bg-white shadow rounded-lg p-6">
          <h2 class="text-2xl font-semibold mb-4 text-gray-700">Data Fetcher Status</h2>

          <p><strong>Status:</strong> <span id="statusText" class="font-bold"><%= status.status %></span></p>
          <p><strong>Last Fetch:</strong> <span id="lastFetch"><%= status.lastFetch || "—" %></span></p>
          <p><strong>Message:</strong> <span id="statusMessage"><%= status.message || "" %></span></p>
        </div>
        <div class="p-4 bg-white rounded-lg shadow-sm border border-gray-100">
          <p class="text-sm text-gray-500">API Uptime</p>
          <p class="text-lg font-bold text-green-600"><%= (status.serverUptime / 3600).toFixed(1) %> hours</p>
        </div>
        <div>
          <p class="text-sm text-gray-500">Memory Usage</p>
          <p id="memoryUsage" class="text-lg font-bold text-red-600">
            <%= status.memoryUsage ? (status.memoryUsage.heapUsed / 1024 / 1024).toFixed(1) : "N/A" %> MB
          </p>
        </div>
        <div class="p-4 bg-white rounded-lg shadow-sm border border-gray-100">
          <p class="text-sm text-gray-500">Last Kiosk Command</p>
          <p class="text-lg font-bold text-gray-600"><%= status.lastCommandMinutesAgo %> min ago</p>
        </div>
      </div>
    </div>

    <div class="p-6 bg-white rounded-lg shadow-md border border-gray-100">
      <h2 class="text-2xl font-semibold mb-4 text-gray-700">Action History</h2>
      <ul id="logList" class="space-y-2 text-sm text-gray-600">
        <% actions.forEach(a => { %>
          <li class="border-b pb-1"><%= a %></li>
        <% }) %>
      </ul>
    </div>
  </div>
</body>
<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();

  socket.on("statusUpdate", (data) => {
    console.log("Status update:", data);

    // Example DOM updates — you can match your actual layout
    document.getElementById("statusText").textContent = data.status;
    document.getElementById("statusText").className =
      data.status === "Running"
        ? "text-green-600 font-bold"
        : data.status === "Error"
        ? "text-red-600 font-bold"
        : data.status === "Idle"
        ? "text-yellow-600 font-bold"
        : "text-gray-500 font-bold";

    if (data.memoryUsage) {
      document.getElementById("memoryUsage").textContent =
        (data.memoryUsage.heapUsed / 1024 / 1024).toFixed(1) + " MB";
    }

    if (data.lastFetch) {
      document.getElementById("lastFetch").textContent = data.lastFetch;
    }

    if (data.message) {
      document.getElementById("statusMessage").textContent = data.message;
    }
  });
  socket.on("logUpdate", (entry) => {
    const list = document.getElementById("logList");
    const li = document.createElement("li");
    li.textContent = entry;
    li.className = "border-b pb-1 animate-pulse";
    list.prepend(li);

    // keep list trimmed to 10
    while (list.children.length > 10) {
      list.removeChild(list.lastChild);
    }
  });  
</script>

</html>
