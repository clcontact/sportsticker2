<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin 1: Dynamic Action Control</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Define a consistent font */
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f4f7f9;
        }
    </style>
</head>
<body class="p-8">

    <div class="max-w-3xl mx-auto bg-white shadow-2xl rounded-xl p-8 space-y-8">
        <h1 class="text-4xl font-extrabold text-gray-800 border-b-4 border-indigo-500 pb-4">
            Admin Remote Actions
        </h1>
        
        <!-- Navigation to Admin Pages -->
        <div class="flex space-x-4 border-b pb-4">
            <!-- This is the current page (Active State) -->
            <span class="px-4 py-2 text-white bg-indigo-600 rounded-lg font-semibold cursor-default shadow-md">Admin 1: Main Actions</span>
            
            <!-- Link to the new page (Inactive State) -->
            <a href="/admin/admin2" class="px-4 py-2 text-indigo-600 bg-gray-100 rounded-lg font-semibold hover:bg-indigo-500 hover:text-white transition duration-200 shadow-sm">Admin 2: Status & Config</a>
        </div>
        <!-- End Navigation -->

        <!-- Hardcoded Action Section -->
        <div class="p-6 bg-green-50 rounded-lg border border-green-200 shadow-md">
            <h2 class="text-2xl font-semibold mb-4 text-green-700">Hardcoded Action</h2>
            <p class="text-gray-600 mb-6">Use this button for a frequently used, pre-set destination.</p>
            
            <button
                class="bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-6 rounded-xl shadow-lg transition duration-150 ease-in-out transform hover:scale-[1.02] active:scale-[0.98] w-full text-lg"
                data-url="http://localhost:3001/GameDetailsPage2/nfl/phi"
                onclick="changeUrl(this.getAttribute('data-url'))">
                Philly Philly Page (Hardcoded)
            </button>
        </div>
        
        <!-- Dynamic Custom Action Section -->
        <div class="p-6 bg-indigo-50 rounded-lg border border-indigo-200 shadow-md">
            <h2 class="text-2xl font-semibold mb-4 text-indigo-700">Custom URL Navigation</h2>
            <p class="text-gray-600 mb-4">Enter any destination URL below and click "Go" to navigate.</p>
            
            <div class="mb-4">
                <label for="custom-url-input" class="block text-sm font-medium text-gray-700 mb-2">Target URL</label>
                <input 
                    type="url" 
                    id="custom-url-input" 
                    placeholder="e.g., http://localhost:3001/GameDetailsPage2/nba/lakers"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 shadow-sm"
                >
            </div>

            <button
                id="custom-url-button"
                class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-4 px-6 rounded-xl shadow-lg transition duration-150 ease-in-out transform hover:scale-[1.02] active:scale-[0.98] w-full text-lg">
                Go to Custom URL
            </button>
        </div>

    </div>

    <script>
        // --- Core Navigation Function ---
        function changeUrl(url) {
            if (!url || url.trim() === '') {
                showModal('Error', 'Please enter a valid URL.');
                return;
            }
            console.log(`Navigating to: ${url}`);
            // Use window.location.href to change the browser's URL and navigate
            window.location.href = url;
        }

        // --- Custom URL Button Logic ---
        document.getElementById('custom-url-button').addEventListener('click', () => {
            const urlInput = document.getElementById('custom-url-input');
            const url = urlInput.value.trim();
            changeUrl(url);
        });

        // --- Simple Modal (Replaces alert() - REQUIRED) ---
        // Since alerts are forbidden, we use a simple inline message/modal system.
        function showModal(title, message) {
            // Check if modal container exists, if not, create it
            let modal = document.getElementById('simple-modal');
            if (!modal) {
                modal = document.createElement('div');
                modal.id = 'simple-modal';
                modal.className = 'fixed inset-0 bg-gray-600 bg-opacity-75 flex items-center justify-center transition-opacity duration-300 opacity-0 pointer-events-none z-50';
                modal.innerHTML = `
                    <div class="bg-white rounded-lg shadow-xl p-6 w-96 transform scale-95 transition-transform duration-300">
                        <h3 class="text-xl font-bold mb-4 text-red-600" id="modal-title"></h3>
                        <p class="text-gray-700 mb-6" id="modal-message"></p>
                        <button class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" onclick="closeModal()">Close</button>
                    </div>
                `;
                document.body.appendChild(modal);
            }

            document.getElementById('modal-title').textContent = title;
            document.getElementById('modal-message').textContent = message;
            
            // Show the modal with transition
            setTimeout(() => {
                modal.classList.remove('opacity-0', 'pointer-events-none');
                modal.querySelector('div').classList.remove('scale-95');
                modal.querySelector('div').classList.add('scale-100');
            }, 10); // Small delay to trigger transition
        }

        function closeModal() {
            const modal = document.getElementById('simple-modal');
            if (modal) {
                // Hide the modal with transition
                modal.querySelector('div').classList.add('scale-95');
                modal.querySelector('div').classList.remove('scale-100');
                modal.classList.add('opacity-0', 'pointer-events-none');
            }
        }
    </script>
</body>
</html>
